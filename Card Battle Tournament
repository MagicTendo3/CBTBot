<script>
function 100Function() {
  var x = document.getElementById("v100");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>

<script>
function cmdFunction() {
  var x = document.getElementById("cmdDIV");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>



